<?xml version="1.0"?>
<tool_dependency>
    <package name="json-collect-data-source" version="1.0.0">
        <install version="1.0">
            <actions>
                <action type="download_by_url">https://raw.githubusercontent.com/fabio-cumbo/galaxy-json-collect-data-source/master/json_collect_data_source.py</action>
                <action type="move_file">
                    <source>json-collect-data-source</source>
                    <destination>$INSTALL_DIR/bin</destination>
                </action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                </action>
            </actions>
        </install>
        <readme>Downloading and configuring galaxy-json-collect-data-source tool</readme>
    </package>
</tool_dependency>